<Window x:Class="MyCommander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyCommander.ViewModels"
        xmlns:uctrl="clr-namespace:CommanderControl;assembly=CommanderControl"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <uctrl:TotalContainer x:Name="totCom" SelectedTab="{Binding ActiveTab, Mode=OneWayToSource}">
        <uctrl:TotalContainer.FirstTab>
            <ContentControl x:Name="tab1"
                     Content="{Binding TabViewModel1}" />
        </uctrl:TotalContainer.FirstTab>
        <uctrl:TotalContainer.SecondTab>
            <ContentControl x:Name="tab2"
                     Content="{Binding TabViewModel2}" />
        </uctrl:TotalContainer.SecondTab>
    </uctrl:TotalContainer>

</Window>
